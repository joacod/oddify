---
import Layout from "../layouts/Layout.astro";
import { Button } from "@oddify";
import HomeIcon from "../icons/Home.astro";
---

<Layout title="Oddify - 404 Not Found">
  <div class="flex flex-col justify-center items-center space-y-5 mt-40">
    <h1 class="text-3xl font-bold">404 - Not Found</h1>
    <p>Sorry, the page you're looking for could not be found.</p>
    <Button href="/">
      <HomeIcon slot="before" />
      <span class="ml-1">Go Home</span>
    </Button>
  </div>
</Layout>
