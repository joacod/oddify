---
interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<article class="xl:w-1/3 md:w-1/2 p-4">
  <div
    class="flex flex-col items-center border border-gray-700 border-opacity-75 p-6 rounded-lg"
  >
    <div class="mb-5">
      <slot />
    </div>
    <div>
      <h2 class="text-lg text-white font-medium title-font mb-2">{title}</h2>
      <p class="leading-relaxed text-base">
        {desc}
      </p>
      <slot name="code" />
    </div>
  </div>
</article>
