---
import { Container } from "@oddify";

interface Props {
  title: string;
  desc: string;
}

const { title, desc } = Astro.props;
---

<article class="xl:w-1/3 md:w-1/2 p-4">
  <Container>
    <div class="flex flex-col items-center">
      <div class="mb-5">
        <slot />
      </div>
      <div>
        <h2 class="text-lg text-white font-medium title-font mb-2">{title}</h2>
        <p class="leading-relaxed text-base">
          {desc}
        </p>
        <slot name="code" />
      </div>
    </div>
  </Container>
</article>
