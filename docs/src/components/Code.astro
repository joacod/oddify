---
interface Props {
  title?: string;
}

const { title = "code" } = Astro.props;
---

<div
  class="h-full mt-5 p-6 rounded-lg border-2 border-indigo-500 flex flex-col relative overflow-hidden"
>
  <span
    class="bg-indigo-500 text-white px-3 py-1 tracking-widest text-xs absolute right-0 top-0 rounded-bl"
    >{title}</span
  >
  <slot />
</div>
